@page
@model FoodPantry.Pages.IndexModel
@{
    ViewData["Title"] = "Food Pantry";
}

<h1>place an order here</h1>

<form method="post">
    <div>
        <label for="StudentName">Name:</label>
        <input asp-for="StudentName" />
    </div>
    <div>
        <label for="StudentId">Student ID:</label>
        <input asp-for="StudentId" />
    </div>

    <h3>Select items:</h3>
    @foreach (var item in Item)
    {
        <div>
            <input type="checkbox" name="SelectedItemIds" value="@item.ItemId" />
            <label>@item.ItemName</label>
        </div>
    }

    <button type="submit">Submit</button>
</form>